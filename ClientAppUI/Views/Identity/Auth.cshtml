@model ClientAppUI.Models.Identity.AuthFormModel
@if (!ViewData.ModelState.IsValid)
{
	<div class="alert alert-danger">
		@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
		{
			<p>@error.ErrorMessage</p>
		}
	</div>
}

<form asp-controller="Identity" asp-action="Auth" method="post">
	@Html.AntiForgeryToken()
	<div>
		<p>	
			<label asp-for="Login">Email or Phone</label><br />
			<input type="text" asp-for="Login" />
			<span asp-validation-for="Login" />
		</p>
		<p>
			<label asp-for="Password">Password</label><br />
			<input type="password" asp-for="Password" />
			<span asp-validation-for="Password" />
		</p>
		<p>
			<input type="submit" value="Send" />
		</p>
	</div>
</form>


@section Scripts
{
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
}